<!doctype html>
<html>
    <head>
        <title><%= @genre.name %></title>

    </head>
    <body>
      <h1><%= @genre.name %></h1>
      <h2>Artists</h2>
      <ul>
        <li>
        <% @genre.artists.each do |artist| %>
          <a href="../artists/<%=artist.to_slug%>.html"><%= artist.name %></a>
        <% end %>
        </li>
      </ul>
      <h2>Songs</h2>
      <ul>
        <li>
        <% @genre.songs.each do |song| %>
          <a href="../songs/<%=song.to_slug%>.html"><%= song.name %></a>
        <% end %> 
        </li>       
      </ul>
    </body>
</html>