<!doctype html>
<html>
    <head>
        <title><%= @artist.name %></title>

    </head>
    <body>
      <h1><%= @artist.name %></h1>
      <h2>Songs</h2>
      <ul>
        <li>
        <% @artist.songs.each do |song| %>
          <a href="../songs/<%=song.to_slug%>.html"><%= song.name %></a>
        <% end %>
        </li>
      </ul>
      <h2>Genres</h2>
      <ul>
        <li>
        <% @artist.genres.each do |genre| %>
          <a href="../genres/<%=genre.to_slug%>.html"><%= genre.name %></a>
        <% end %> 
        </li>       
      </ul>
    </body>
</html>